{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Next.js: debug server-side",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "/usr/local/bin/npm", // Use absolute path to npm
            "runtimeArgs": ["run", "dev"],
            "port": 9229,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Next.js: debug client-side",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src/app"
        },
        {
            "name": "Next.js: debug full stack",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "/usr/local/bin/node",
            "runtimeArgs": ["/usr/local/bin/npm", "run", "dev"],
            "port": 9229,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"],
            "serverReadyAction": {
                "pattern": "started server on .+, url: (https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            }
        }
    ]
}